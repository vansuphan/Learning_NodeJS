extends ../layout_common/header.pug
block header
    h1 Users
    .d-flex.align-items-center.justify-content-between
        a.btn.btn-primary.mx-1(href="/users/create") New User
        form.form-inline.my-2.mx-1(action="/users/search", method="get")
            input.form-control(type="search", name="q")
            button.btn.btn-primary(type='search') Search
    table.table
        tr
            th Avatar
            th Name
            th Phone
            th Action
        each user in users
            tr  
                td
                    img(src= user.avatar, width ="40px") 
                td= user.name
                td= user.phone
                td 
                   a.btn.btn-light(href='/users/' + user.id) Views
        else
            li There are not values    

