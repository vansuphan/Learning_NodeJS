extends ../layout_common/header.pug
block header
    h1.my-3 Create user
    if errors
        each error in errors
            .alert.alert-danger=error        
    form.form-group.my-2.mx-1(action="/users/create", method="POST", enctype="multipart/form-data")
        label.mx-3.my-2.h3(for="create-name") Name
        input#create-name.form-control.mx-3(type="text" name="name",value = values ? values.name : '' )
        label.mx-3.my-2.h3(for="create-phone") Phone
        input#create-avatar.form-control.mx-3(type="text" name="phone", value = values ? values.phone : '')
        label.mx-3.my-2.h3(for="create-phone") Avatar
        input#create-avatar.form-control-file.mx-3(type="file" name="avatar")
        button.btn.btn-primary.mx-3.my-3 Create
        
